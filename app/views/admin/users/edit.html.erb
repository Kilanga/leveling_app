<h1>Modifier l'utilisateur</h1>

<%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>
  <div class="form-group">
    <%= f.label :xp, "XP" %>
    <%= f.number_field :xp, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :coins, "Pièces" %>
    <%= f.number_field :coins, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :admin, "Admin ?" %>
    <%= f.check_box :admin %>
  </div>

  <%= f.submit "Mettre à jour", class: "btn btn-success" %>
<% end %>

<%= link_to "Retour", admin_users_path, class: "btn btn-secondary" %>
